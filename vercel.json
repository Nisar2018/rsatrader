{
  "version": 2,
  "builds": [
   
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build" 
      }
    },
    
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    
    {
      "source": "/api/(.*)",
      "destination": "/index.js"
    },
    
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ]
}